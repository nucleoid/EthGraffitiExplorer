@page "/graffiti/{id:int}"
@using EthGraffitiExplorer.Core.DTOs
@using EthGraffitiExplorer.Web.Services
@inject GraffitiApiClient ApiClient
@inject NavigationManager Navigation

<PageTitle>Graffiti Details</PageTitle>

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/graffiti">Graffiti</a></li>
            <li class="breadcrumb-item active">@Id</li>
        </ol>
    </nav>

    @if (loading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (graffiti != null)
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Graffiti Details</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Slot:</dt>
                            <dd class="col-sm-8"><code>@graffiti.Slot</code></dd>

                            <dt class="col-sm-4">Epoch:</dt>
                            <dd class="col-sm-8">@graffiti.Epoch</dd>

                            <dt class="col-sm-4">Block Number:</dt>
                            <dd class="col-sm-8">@graffiti.BlockNumber</dd>

                            <dt class="col-sm-4">Block Hash:</dt>
                            <dd class="col-sm-8"><code class="small">@graffiti.BlockHash</code></dd>

                            <dt class="col-sm-4">Validator Index:</dt>
                            <dd class="col-sm-8">
                                <a href="/validator/@graffiti.ValidatorIndex">@graffiti.ValidatorIndex</a>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Timestamp:</dt>
                            <dd class="col-sm-8">@graffiti.Timestamp.ToString("yyyy-MM-dd HH:mm:ss UTC")</dd>

                            @if (!string.IsNullOrEmpty(graffiti.ProposerPubkey))
                            {
                                <dt class="col-sm-4">Proposer Pubkey:</dt>
                                <dd class="col-sm-8"><code class="small">@graffiti.ProposerPubkey</code></dd>
                            }
                        </dl>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-12">
                        <h5>Graffiti Content</h5>
                        <div class="alert alert-info">
                            <strong>Decoded:</strong>
                            <p class="mb-0 mt-2">@graffiti.DecodedGraffiti</p>
                        </div>
                        <div class="alert alert-secondary">
                            <strong>Raw (Hex):</strong>
                            <p class="mb-0 mt-2"><code>@graffiti.RawGraffiti</code></p>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button class="btn btn-secondary" @onclick="GoBack">
                        <i class="bi bi-arrow-left"></i> Back
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> Graffiti not found.
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private GraffitiDto? graffiti;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadGraffiti();
    }

    private async Task LoadGraffiti()
    {
        loading = true;
        try
        {
            graffiti = await ApiClient.GetGraffitiByIdAsync(Id);
        }
        finally
        {
            loading = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/graffiti");
    }
}

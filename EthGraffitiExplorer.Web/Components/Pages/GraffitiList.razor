@page "/graffiti"
@using EthGraffitiExplorer.Core.DTOs
@using EthGraffitiExplorer.Web.Services
@inject GraffitiApiClient ApiClient
@inject NavigationManager Navigation

<PageTitle>Graffiti Explorer</PageTitle>

<div class="container-fluid mt-4">
    <h1 class="mb-4">
        <i class="bi bi-search"></i> Ethereum Validator Graffiti Explorer
    </h1>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Search Graffiti</h5>
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search Text</label>
                    <input type="text" class="form-control" @bind="searchTerm" placeholder="Search graffiti..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Validator Index</label>
                    <input type="number" class="form-control" @bind="validatorIndex" placeholder="Optional" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">From Slot</label>
                    <input type="number" class="form-control" @bind="fromSlot" placeholder="Optional" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <button class="btn btn-primary w-100" @onclick="SearchGraffiti">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading graffiti...</p>
        </div>
    }
    else if (graffitis != null && graffitis.Any())
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Results (@totalCount total)</h5>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Slot</th>
                                <th>Epoch</th>
                                <th>Validator</th>
                                <th>Graffiti</th>
                                <th>Timestamp</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var graffiti in graffitis)
                            {
                                <tr>
                                    <td><code>@graffiti.Slot</code></td>
                                    <td>@graffiti.Epoch</td>
                                    <td>
                                        <a href="/validator/@graffiti.ValidatorIndex">
                                            @graffiti.ValidatorIndex
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark" title="@graffiti.RawGraffiti">
                                            @graffiti.DecodedGraffiti
                                        </span>
                                    </td>
                                    <td>@graffiti.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewDetails(graffiti.Id)">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (totalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Previous</button>
                            </li>
                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                var pageNum = i;
                                <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(pageNum)">@pageNum</button>
                                </li>
                            }
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">Next</button>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No graffiti found. Try a different search or load recent graffiti.
        </div>
    }
</div>

@code {
    private List<GraffitiDto>? graffitis;
    private bool loading = false;
    private string? searchTerm;
    private int? validatorIndex;
    private long? fromSlot;
    private int currentPage = 1;
    private int pageSize = 50;
    private int totalPages = 0;
    private int totalCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadRecentGraffiti();
    }

    private async Task LoadRecentGraffiti()
    {
        loading = true;
        try
        {
            graffitis = await ApiClient.GetRecentGraffitiAsync(pageSize);
            totalCount = graffitis?.Count ?? 0;
            totalPages = 1;
        }
        finally
        {
            loading = false;
        }
    }

    private async Task SearchGraffiti()
    {
        loading = true;
        currentPage = 1;
        try
        {
            var request = new GraffitiSearchRequest
            {
                SearchTerm = searchTerm,
                ValidatorIndex = validatorIndex,
                FromSlot = fromSlot,
                PageNumber = currentPage,
                PageSize = pageSize
            };

            var result = await ApiClient.SearchGraffitiAsync(request);
            if (result != null)
            {
                graffitis = result.Items;
                totalCount = result.TotalCount;
                totalPages = result.TotalPages;
            }
        }
        finally
        {
            loading = false;
        }
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || page > totalPages)
            return;

        currentPage = page;
        await SearchGraffiti();
    }

    private void ViewDetails(int id)
    {
        Navigation.NavigateTo($"/graffiti/{id}");
    }
}

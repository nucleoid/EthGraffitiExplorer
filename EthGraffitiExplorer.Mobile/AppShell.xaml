<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EthGraffitiExplorer.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EthGraffitiExplorer.Mobile"
    xmlns:pages="clr-namespace:EthGraffitiExplorer.Mobile.Pages"
    Title="ETH Graffiti Explorer">

    <TabBar>
        <ShellContent
            Title="Graffiti"
            Icon="search.png"
            ContentTemplate="{DataTemplate pages:GraffitiListPage}"
            Route="graffiti" />

        <ShellContent
            Title="About"
            Icon="info.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="about" />
    </TabBar>

</Shell>
